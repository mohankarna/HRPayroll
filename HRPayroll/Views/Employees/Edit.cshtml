@model HRPayroll.Domain.Entity.Employee
@using HRPayroll.Utility;

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <h4>Employee</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.EmployeeName)
                @Html.EditorFor(model => model.EmployeeName)
                @Html.ValidationMessageFor(model => model.EmployeeName)
            </div>
        

        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.Title)
                @Html.DropDownListFor(model => model.TitleId, DropdownHelper.FillddlTitle())
                @Html.ValidationMessageFor(model => model.TitleId)
            </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.GenderId, "Gender")

            @Html.DropDownListFor(model => model.GenderId, DropdownHelper.FillddlGender())




            @Html.ValidationMessageFor(model => model.GenderId)
            </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.MaritalStatus, "Marital Status")

            @Html.DropDownListFor(model => model.MaritalStatusId, DropdownHelper.FillddlMaritalStatus())




            @Html.ValidationMessageFor(model => model.MaritalStatusId)

        </div>
            <div class="form-group col-lg-4">
                @Html.LabelFor(model => model.Designation)
                @Html.DropDownListFor(model=>model.DesignationId,DropdownHelper.FillddlDesignation())
                @Html.ValidationMessageFor(model => model.DesignationId)
            </div>


            <div class="form-group col-lg-4">
                @Html.LabelFor(model => model.Department)
                @Html.DropDownListFor(model => model.DepartmentId, DropdownHelper.FillddlDepartment())
                @Html.ValidationMessageFor(model => model.DepartmentId)
            </div>


        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.Branch)
            @Html.DropDownListFor(model => model.BranchId, DropdownHelper.FillddlBranch())
            @Html.ValidationMessageFor(model => model.BranchId)
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.EmailId, "Email")

            @Html.TextBoxFor(model => model.EmailId)
            @Html.ValidationMessageFor(model => model.EmailId)

        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.MobileNo, "Mobile No.")

            @Html.TextBoxFor(model => model.MobileNo)
            @Html.ValidationMessageFor(model => model.MobileNo)

        </div>

        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.Address, "Adress")

            @Html.TextBoxFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.Dob, "Date of Birth")

            @Html.TextBoxFor(model => model.Dob)
            @Html.ValidationMessageFor(model => model.Dob)
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.FathersName, "Father's Name")

            @Html.TextBoxFor(model => model.FathersName)
            @Html.ValidationMessageFor(model => model.FathersName)
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.CitizenShipNo, "CitizenShipNo.")

            @Html.TextBoxFor(model => model.CitizenShipNo)
            @Html.ValidationMessageFor(model => model.CitizenShipNo)
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.Religion, "Religion")

            @Html.DropDownListFor(model => model.Religion, DropdownHelper.FillddlReligion())
            @Html.ValidationMessageFor(model => model.Religion)

        </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
  
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
