@using HRPayroll.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HRPayroll</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EIPS", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Branch", "Index", "Branches")</li>
                            <li>@Html.ActionLink("Designation", "Index", "Designation")</li>
                            <li>@Html.ActionLink("Department", "Index", "Departments")</li>
                            <li>@Html.ActionLink("Employee", "Index", "Employees")</li>
                            <li>@Html.ActionLink("Ethenics", "Index", "Ethenics")</li>
                            <li>@Html.ActionLink("Genders", "Index", "Genders")</li>
                            <li>@Html.ActionLink("MaritalStatus", "Index", "MaritalStatus")</li>
                            <li>@Html.ActionLink("PayPlanSetup", "Index", "PayPlanSetups")</li>
                            <li>@Html.ActionLink("Qualification", "Index", "Qualifications")</li>
                            <li>@Html.ActionLink("Religion", "Index", "Religions")</li>
                            <li>@Html.ActionLink("Roles", "Index", "Roles")</li>
                            <li>@Html.ActionLink("ServiceType", "Index", "ServiceTypes")</li>
                            <li>@Html.ActionLink("Users", "Index", "Users")</li>
                            <li>@Html.ActionLink("Titles", "Index", "Titles")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Salary<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Working Days Entry", "Index", "WorkingDaysEntries")</li>
                            <li>@Html.ActionLink("SalarySheet", "Index", "SalarySheet")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Leave<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("LeaveRequest", "Index", "LeaveRequests")</li>
                            <li>@Html.ActionLink("LeaveReport", "Index", "LeaveReports")</li>
                        </ul>
                    </li>

                </ul>
                <ul class="nav navbar-nav" style="float:right">
                    @if (HttpContext.Current.Session["HRPayroll.Session"] != null)
                    {
                        <li class="dropdown" style="float:right">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                "Hello " + @UserSession.GetSession().UserName
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li> @Html.ActionLink("Logout", "Logout", "Account")</li>
                            </ul>
                        </li>

                    }
                    else
                    {
                        <li id="login" class="dropdown" style="float:right">
                            @Html.ActionLink("Login", "Login", "Account")
                        </li>

                    }
                </ul>
            </div>


        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EIPS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(".validation-summary-errors").removeClass("validation-summary-errors");
        $(".input-validation-error").removeClass("input-validation-error").parent().addClass("has-error");
        $("input:text").addClass("form-control");
        $("select").addClass("form-control");
        $("textarea").addClass("form-control");
        $(":input[type='number']").addClass("form-control");
        $(":input[type='datetime']").addClass("form-control");
        $(":input[type='checkbox']").addClass("form-control");
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();
        });

    </script>
</body>
</html>
